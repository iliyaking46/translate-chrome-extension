{
  "name": "Translate Helper",
  "description": "Extension for easy translate from EN to RU and backwards.",
  "version": "2.0.0",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 3,
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt + Q",
        "mac": "MacCtrl + Q"
      },
      "description": "Open extention"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "scripting", "activeTab", "contextMenus"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/**"
  ]
}
