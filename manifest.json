{
  "manifest_version": 3,
  "version": "2.0.1",
  "name": "Translate Helper",
  "description": "Extension for easy translate text from websites using AI.",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt + Q",
        "mac": "Alt + Q"
      },
      "description": "Open extension"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "scripting", "activeTab", "contextMenus", "storage"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/**"
  ],
  "options_page": "options.html"
}
